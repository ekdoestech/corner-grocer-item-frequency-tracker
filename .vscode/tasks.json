{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build CornerGrocer",
      "type": "shell",
      "command": "cmd",
      "args": [
        "/c",
        "if not exist build mkdir build && cl",
        "/Zi",
        "/EHsc",
        "src/main.cpp",
        "src/GroceryTracker.cpp",
        "/Fe:build\\CornerGrocer.exe"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$msCompile"]
    }
  ]
}
